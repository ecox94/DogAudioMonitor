<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"

    tools:context=".WavRecorderActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pawprint" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:paddingTop="50dp"
            android:fontFamily="sans-serif"
            android:text="Record your dog barking  (at least twenty seconds is recomended)" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_weight="1.0"
            android:text="@string/start_recording" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/stop_recording" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text="Proceed to next Stage when finsihed recording or if you have a previous recoding saved"
            app:fontFamily="sans-serif" />

        <Button
            android:id="@+id/nextPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1.0"

            android:text="Next" />


    </LinearLayout>
</LinearLayout>

